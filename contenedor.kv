<IoT>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            rows: 2
            background: rgba(255, 255, 255, 0.5)
            Button:
                text: 'Alternar luz'
                on_press: root.alternarLuz()
            Image:
                source: root.imagen_luz
                size: self.texture_size
            
            Image:
                source: root.imagen_termometro
                size: self.texture_size
            
            Button:
                text: 'Temperatura: ' + root.temperatura_str